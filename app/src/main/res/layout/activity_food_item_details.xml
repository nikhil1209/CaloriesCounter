<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_item_details"
    android:padding="16dp"
    android:background="#FFFFFF">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="72dp"
        android:background="#85000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detsFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:layout_marginTop="18dp"
            android:text="dhjbkjbkkja"
            android:textColor="#FDFCFC"
            android:textSize="33dp" />

        <TextView
            android:id="@+id/detsCaloriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Calories:"

            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/detsCaloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="200"
            android:textColor="#FDFBFB"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detsDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Added on: "
            android:textColor="#FDFCFC"
            android:textSize="14dp"
            android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detsdeleteButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/ic_delete"
                android:soundEffectsEnabled="true"
                android:layout_gravity="left" />

            <Button
                android:id="@+id/detsShareButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginStart="225dp"
                android:soundEffectsEnabled="true"
                android:background="@android:drawable/ic_menu_share" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>